// https://eslint.bootcss.com
{
  "root": true,
  // 环境
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  // 解析器
  "parser": "@typescript-eslint/parser",
  // 解析器选项
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  // 继承
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  // 插件
  "plugins": [
    "@typescript-eslint"
  ],
  // 规则
  "rules": {
    /*
      "off" or 0 - 关闭规则
      "warn" or 1 - 将规则视为一个警告（不会影响退出码）
      "error" or 2 - 将规则视为一个错误 (退出码为1)
    */
    "no-console": 2
  }
}
